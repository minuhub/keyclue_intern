<!DOCTYPE html>
	<html>
		<head>
			<% include ../partials/header.ejs %>
		</head>
		<body>
	<% include ../partials/nav.ejs %>
		 <div id="u4" class="ax_default heading_1">
        <div id="u4_div" class=""></div>
       
      </div>
			<form id="create_option" action="/create_option" name="form" method="post">
				<div class="col-lg-12">
				<div class="in-input">
					<input  class="form-control " id="brand_name" type="text" Placeholder="New option name" name="option_name" />
				</div>
				
				
				<div class="in-btn">
					<input class="btn btn-primary" type="submit" name="submit" value="+ Create Option">
				</div>
				</div>
			</form>
			
			<div class="container">
				
				
					<table id = "example" class="table table-bordered">
					<thead>
			  <tr>
				<th>Option Name</th>
				<th >Action</th>
							
			  </tr>
			</thead>
			<tbody>
			<% data.forEach(function(r, index) { %>
				<tr>
					<td><%= r.name %></td>
					<td><a onclick="return confirm('Are you sure to want to delete this brand?');" href="javascript:void(0);" class="btn-primary btn">Delete</a></td>
					</tr>
				<% }); %>
		  </tbody>
					</table>
				
				
			</div>
			
<script>
			
$(document).ready(function() {
	$('#example').dataTable(); 
			
	
	 $("#create_option").validate({
		rules: {
			option_name: {required : true,alphanumeric : true}
			
		},
		messages: {
			option_name: { required :"Please enter Option name.", alphanumeric : "Please enter valid option name."}
		},
		submitHandler: function(form) {
			form.submit();
		}
	});
});
		
</script>
			
		</body>
	</html>


